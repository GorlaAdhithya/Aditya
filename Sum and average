#include <stdio.h>
int main() {
    int n,sum=0;
   printf("Enter the number of elements: ");
    scanf("%d", &n);
       int arr[n];
printf("Enter %d elements:\n", n);
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }
  for(int i=0;i<n;i++){
    sum=sum+arr[i];
  }
  int average=sum/n;
  printf("the sum is %d and average is %d",sum,average);
  return 0;
}
